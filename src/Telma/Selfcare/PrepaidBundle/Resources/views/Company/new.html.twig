{% block class_header_background %}content_header rechargeC{% endblock %}
{% block content -%}

    {% include 'TelmaSelfcarePrepaidBundle:Company:nav_menu.html.twig' %}
    <div class="abs">
        <div class="wrap-bg">
            {% trans_default_domain 'FOSUserBundle' %}
            {% for flashMessage in app.session.flashbag.get('denied') %}
                <div class="flash-notice notif" style="color: red;font-size: 15px">
                    {{ flashMessage }}<button type="button" id="btn-dismiss" style="color: red;font-size: 10px;background: yellow" class="close" data-dismiss="modal">&times;</button>
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('existe_company') %}
                <div class="flash-notice notif" style="color: red;font-size: 15px">
                    {{ flashMessage }}<button type="button" id="btn-dismiss" style="color: red;font-size: 10px;background: yellow" class="close" data-dismiss="modal">&times;</button>
                </div>
            {% endfor %}
            <div class="aheader_bg text14noirbold"><div class="pad_cont_aheader">Cr√©ation d'une entreprise</div></div>
            <div class="acont_bg">
                <form method="POST" name="rechargeForm" id="rechargeForm" action="{{ url('company_create') }}">

                    <div class="clearfix">
                        <label class="text11noirnormal flot pad_cont_a_div1">Nom *</label>
                        <p class="transparency_bouton flot"><input type="text" value=""  class="text11vertnormal" required="required" name="nomComp" id="nomComp">

                        </p>
                    </div>
                    <div class="clearfix">
                        <label class="text11noirnormal flot pad_cont_a_div1">Adresse *</label>
                        <div class="flot rposition clearfix">
                            <p class="transparency_bouton flot"><input type="text" class="text11vertnormal" required="required" name="adressComp" id="adressComp" value="">
                            </p>
                            <p class="btnHelp"><a href="#pop-error1" id="popin"  class="error1" href="{{ asset('bundles/telmaselfcareprepaid/images/poppin_recharge.jpg') }}"><img src="{{ asset('bundles/telmaselfcareprepaid/images/rechargenligne_petit_interrogation.png') }}" width="26" height="24" border="0" /></a></p>
                            <p><a href="#pop-error" id="link_error" class="error"></a></p>
                        </div>
                    </div>
                    <div class="row text-right btn_create_comp">

                        <div style="padding-left: 43px;" class="col-sm-4 col-sm-offset-4"><button class="btn btn-success" id="_submit" name="_submit">Valider</button></div>
                        <div class="col-sm-4"><a href="#" style="margin-right: 37px;" class="btn btn-secondary" id="_submit" name="_submit">Annuler</a></div>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <div class="text11noirnormal flot">
        <div class=" pad_content_bas_divglobal">

            <p style="padding-right: 100px">Pour vous connecter,veuillez saisir votre login (adresse email) et votre mot de passe.</p>
        </div>
    </div>
    <div class="clear"></div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("#btn-dismiss").click(function () {
                $('.notif').css('display','none');
                $(this).css('display','none');
            })
        });
    </script>
{% endblock %}