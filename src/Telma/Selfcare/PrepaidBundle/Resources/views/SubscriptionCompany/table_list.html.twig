<div class="row">
    <div class=" col-md-12 block_table_list">
        <table class="table table-striped records_list block_table_result">
            <thead class=" head_table">
            <tr>
                <th></th>
                <th>Num√©ro</th>
                <th>Entreprise</th>
            </tr>
            </thead>
            <tbody>
            {% if entities | length > 0 %}
                {% for entity in entities %}
                    <tr class="row_data_table">
                        <td><a href="{{ path('subscriptioncompany_delete', { 'id': entity.id }) }}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                        <td>{{ entity.subscription }}</td>
